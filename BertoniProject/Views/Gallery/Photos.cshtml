@model IEnumerable<Bertoni.Entities.Models.Photo>

@{ ViewData["Title"] = "Photos"; }

<div class="container">
    <h1>Fotos</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
<div class="col mt-3">
    <div class="card h-100">
        <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ThumbnailUrl)" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Id)</h5>
            <p class="card-text"> @Html.DisplayFor(modelItem => item.Title)</p>
            <button type="button" class="btn btn-link btn-sm" data-toggle="modal" data-target="#myModal">Ver comentarios</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Comentarios</h4>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Body
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var photo in item.Comments)
                            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => photo.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => photo.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => photo.Body)
                </td>
            </tr>}
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>            }
    </div>

</div>